<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View для переміщень -->
    <record id="view_it_asset_movement_tree" model="ir.ui.view">
        <field name="name">it.asset.movement.tree</field>
        <field name="model">it.asset.movement</field>
        <field name="arch" type="xml">
            <tree string="Переміщення активів">
                <field name="name"/>
                <field name="movement_date"/>
                <field name="asset_id"/>
                <field name="asset_code"/>
                <field name="asset_category"/>
                <field name="previous_employee_id"/>
                <field name="employee_id"/>
                <field name="movement_type"/>
                <field name="user_id" widget="many2one_avatar_user"/>
            </tree>
        </field>
    </record>

    <!-- Form View для переміщень -->
    <record id="view_it_asset_movement_form" model="ir.ui.view">
        <field name="name">it.asset.movement.form</field>
        <field name="model">it.asset.movement</field>
        <field name="arch" type="xml">
            <form string="Переміщення активу">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Переміщення"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="asset_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="asset_code" readonly="1"/>
                            <field name="asset_category" readonly="1"/>
                        </group>
                        <group>
                            <field name="movement_date"/>
                            <field name="movement_type"/>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Переміщення">
                            <field name="previous_employee_id" options="{'no_create': True}"/>
                            <label for="employee_id" string="→"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <group>
                        <field name="reason" placeholder="Вкажіть причину переміщення..."/>
                    </group>

                    <group>
                        <field name="notes" placeholder="Додаткова інформація..."/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View для переміщень -->
    <record id="view_it_asset_movement_search" model="ir.ui.view">
        <field name="name">it.asset.movement.search</field>
        <field name="model">it.asset.movement</field>
        <field name="arch" type="xml">
            <search string="Пошук переміщень">
                <field name="name" string="Номер"/>
                <field name="asset_id"/>
                <field name="previous_employee_id"/>
                <field name="employee_id"/>
                <field name="movement_date"/>

                <filter string="Цього місяця" name="this_month"
                        domain="[('movement_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('movement_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Цього року" name="this_year"
                        domain="[('movement_date', '&gt;=', (context_today() - relativedelta(month=1, day=1)).strftime('%Y-%m-%d')),
                                 ('movement_date', '&lt;=', (context_today() + relativedelta(month=12, day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Групувати за">
                    <filter string="Актив" name="group_asset" context="{'group_by': 'asset_id'}"/>
                    <filter string="Від співробітника" name="group_from" context="{'group_by': 'previous_employee_id'}"/>
                    <filter string="Співробітник" name="group_to" context="{'group_by': 'employee_id'}"/>
                    <filter string="Тип" name="group_type" context="{'group_by': 'movement_type'}"/>
                    <filter string="Дата" name="group_date" context="{'group_by': 'movement_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action для переміщень -->
    <record id="action_it_asset_movement" model="ir.actions.act_window">
        <field name="name">Переміщення активів</field>
        <field name="res_model">it.asset.movement</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Немає переміщень активів
            </p>
            <p>
                Тут відображається історія всіх переміщень IT-активів між співробітниками.
            </p>
        </field>
    </record>

</odoo>