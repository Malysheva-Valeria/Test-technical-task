<odoo>
    <data>

        <!-- Disease Tree View -->
        <record id="view_hospital_disease_tree" model="ir.ui.view">
            <field name="name">hr_hospital.disease.tree</field>
            <field name="model">hr_hospital.disease</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                </tree>
            </field>
        </record>

        <!-- Disease Form View -->
        <record id="view_hospital_disease_form" model="ir.ui.view">
            <field name="name">hr_hospital.disease.form</field>
            <field name="model">hr_hospital.disease</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="category"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Patients">
                                <field name="patient_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="doctor_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Disease Action -->
        <record id="action_hospital_disease" model="ir.actions.act_window">
            <field name="name">Diseases</field>
            <field name="res_model">hr_hospital.disease</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new disease type
                </p>
            </field>
        </record>

    </data>
</odoo>
